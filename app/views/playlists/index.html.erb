<h1>Listing all playlists</h1>

<% @playlists.each do |playlist| %>
  <div class="playlist">
    <h3><%= link_to playlist.name, playlist_path(playlist) %></h3>
    <p><%= playlist.description %></p>
    <% if playlist.user == current_user %>
      <div class="links">
        <%= link_to "Edit", edit_playlist_path(playlist) %> |
        <%= link_to "Delete", playlist_path(playlist), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
<% end %>