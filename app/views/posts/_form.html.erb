<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= collection_check_boxes(:post, :tag_ids, Tag.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.submit @post.new_record? ? "Create Post" : "Update Post" %>
  </div>
<% end %>